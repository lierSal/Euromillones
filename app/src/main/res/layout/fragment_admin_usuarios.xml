<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/Blanco_Puro"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FragmentAdminUsuarios">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_weight="7">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/tv_usuarios"
                android:textColor="@color/Texto_Primario"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_nusuarios"
                android:textColor="@color/Texto_Secundario"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:text="@string/tv_EMPTY"
                android:textSize="20dp" />
            <Button
                android:drawableLeft="@drawable/ic_view_list"
                android:id="@+id/btn_musuarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_weight="0"
                android:gravity="center"
                android:text="@string/bt_mostrar" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/Texto_Primario"
                android:text="@string/tv_colaboradores"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_ncolaboradores"
                android:layout_width="fill_parent"
                android:textColor="@color/Texto_Secundario"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:text="@string/tv_EMPTY"
                android:textSize="20dp" />
            <Button
                android:drawableLeft="@drawable/ic_view_list"
                android:id="@+id/btn_mcolaboradores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_weight="0"
                android:gravity="center"
                android:text="@string/bt_mostrar" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Texto_Primario"
                android:gravity="left"
                android:text="@string/tv_administradores"
                android:textSize="20dp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/tv_nadministradores"
                android:layout_width="fill_parent"
                android:textColor="@color/Texto_Secundario"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:text="@string/tv_EMPTY"
                android:textSize="20dp" />

            <Button
                android:drawableLeft="@drawable/ic_view_list"
                android:id="@+id/btn_madministradores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_weight="0"
                android:gravity="center"
                android:text="@string/bt_mostrar" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/Blanco_Puro"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FragmentNuevoResultado">

    <ScrollView
        android:id="@+id/contenedor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_weight="7">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:textColor="@color/Texto_Primario"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/tv_numeros"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <EditText
                    android:id="@+id/et_n1"
                    android:layout_width="60dp"
                    android:textColor="@color/Texto_Secundario"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:hint="N1"
                    android:maxLength="2"
                    android:gravity="center_horizontal"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/Texto_Secundario"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_n2"
                    android:hint="N2"
                    android:textColor="@color/Texto_Secundario"
                    android:maxLength="2"
                    android:gravity="center_horizontal"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:inputType="number" />

                <TextView
                    android:textColor="@color/Texto_Secundario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:textColor="@color/Texto_Secundario"
                    android:id="@+id/et_n3"
                    android:layout_width="60dp"
                    android:hint="N3"
                    android:maxLength="2"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <EditText
                    android:textColor="@color/Texto_Secundario"
                    android:id="@+id/et_n4"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:hint="N4"
                    android:maxLength="2"
                    android:gravity="center_horizontal"
                    android:inputType="number" />

                <TextView
                    android:textColor="@color/Texto_Secundario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:textColor="@color/Texto_Secundario"
                    android:id="@+id/et_n5"
                    android:hint="N5"
                    android:maxLength="2"
                    android:gravity="center_horizontal"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:inputType="number" />

            </LinearLayout>

            <TextView
                android:textColor="@color/Texto_Primario"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/tv_estrellas"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <EditText
                    android:textColor="@color/Texto_Secundario"
                    android:id="@+id/et_e1"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:hint="E1"
                    android:maxLength="2"
                    android:gravity="center_horizontal"
                    android:inputType="number" />

                <TextView
                    android:textColor="@color/Texto_Secundario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:textColor="@color/Texto_Secundario"
                    android:id="@+id/et_e2"
                    android:hint="E2"
                    android:maxLength="2"
                    android:gravity="center_horizontal"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:inputType="number" />

            </LinearLayout>


            <TextView
                android:textColor="@color/Texto_Primario"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/tv_fecha"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <DatePicker
                    android:textColor="@color/Texto_Secundario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dp_fecha" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">

        <Button
            android:drawableLeft="@drawable/ic_save_negro"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:text="@string/bt_guardar"
            android:id="@+id/btn_guardar_nuevo_resultado" />
    </LinearLayout>


</LinearLayout>